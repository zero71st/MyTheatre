@model MyTheatre.Web.ViewModels.VideoViewModel
@{
    ViewData["Title"] = "Edit Video";
}

<h2>Edit Video</h2>
<hr/>
<form asp-action="EditVideo">
<h3>@Model.Title</h3>
<div class="col-md-offset-10">
    <input type="submit" class="btn btn-primary" value="Save"  />
    <a asp-action="Index" class="btn btn-default">Cancel</a>
</div>
<div class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Plot" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Plot" class="form-control" />
            <span asp-validation-for="Plot" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="GenreId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="GenreId" class="form-control" asp-items="@(new SelectList(@ViewBag.Genres,"Id","Name"))"></select>
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>
    </div>
</div>
</form>