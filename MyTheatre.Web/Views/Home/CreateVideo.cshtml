@model MyTheatre.Web.ViewModels.VideoViewModel
@{
    ViewData["Title"] = "Add Video";
}

<h2>Add Video</h2>
    <div class="col-sm-offset-10">
        <a class="btn btn-primary" asp-action="Index">Save</a>
        <a class="btn btn-warning" asp-action="Index">Cancel</a>
    </div>

<form asp-action="CreateVideo">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>    
        <div class="form-group">
            <label asp-for="Plot" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Plot" class="form-control" />
                <span asp-validation-for="Plot" class="text-danger"></span>
            </div>
        </div>   
    </div>
</form>